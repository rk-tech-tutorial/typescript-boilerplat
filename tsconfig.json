{
  "compilerOptions": {
    "target": "es6" /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', or 'ESNEXT'. */,
    "module": "commonjs" /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', 'es2020', or 'ESNext'. */,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true /* Skip type checking of declaration files. */,
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@configs": ["./src/configs/index"],
      "@utils/*": ["./src/utils/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@services/*": ["./src/services/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@repository/*": ["./src/repository/*"],
      "@scripts/*": ["./src/scripts/*"],
      "@models": ["./src/models/index"],
      "@validators": ["./src/validators/index"],
      "@projection": ["./src/projection/index"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/helpers/paytm/*.js", "./**/*.json"],
  "exclude": ["*.d.ts", "node_modules", "build", "systemConfig", "logs", "notes", "uploads", "locales"]
}
